<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>

    <addon id="script.revolve.service" name="Revolve Skin Script" version="2.0.1" provider-name="Malthus">
        <requires>
            <import addon="xbmc.python" version="3.0.0"/>
            <import addon="xbmc.addon" version="17.0.0"/>
        </requires>
        <extension point="xbmc.python.library" library="default.py" />
        <extension point="xbmc.addon.metadata">
            <language></language>
            <summary lang="en">Revolve skin script</summary>
            <description lang="en">Script that realizes some necessary functions for the Revolve skin.[CR][CR]Script by Malthus.</description>
            <disclaimer lang="en"></disclaimer>
            <platform>all</platform>
            <license>GNU General Public License, Version 2</license>
            <source>https://github.com/Malthus/script.revolve.service</source>
        </extension>
    </addon>

    <addon id="script.favourites" name="Favourites Script" version="8.1.3" provider-name="ronie, `Black">
        <requires>
            <import addon="xbmc.python" version="3.0.0"/>
        </requires>
        <extension point="xbmc.python.library" library="default.py"/>
        <extension point="xbmc.addon.metadata">
            <summary lang="en_GB">Favourites script</summary>
            <description lang="en_GB">Fetches item from your Kodi favourites to populate Home menu/submenu with custom buttons.</description>
            <disclaimer lang="en_GB">Needs skin support for it to be used properly</disclaimer>
            <platform>all</platform>
            <license>GPL-2.0-only</license>
            <forum>https://forum.kodi.tv/showthread.php?tid=114671</forum>
            <source>https://gitlab.com/ronie/script.favourites</source>
            <assets>
                <icon>resources/icon.png</icon>
            </assets>
            <news>- get favourites using json-rpc instead of parsing the favourites.xml file
- fix crash when no favourites exist</news>
        </extension>
    </addon>

</addons>
